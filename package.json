{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    ".github/actions/*",
    "app/*",
    "packages/*",
    "templates/*",
    "tooling/*"
  ],
  "scripts": {
    "test": "pnpm -r test",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "preview:frontend": "pnpm --filter @chatx/frontend preview",
    "preview": "pnpm run /^preview:.*/",
    "deploy:staging": "NODE_ENV=staging ts-node ./app/deploy.ts && sam deploy -t ./app/template.yaml --stack-name chatx-staging --s3-prefix chatx-staging --parameter-overrides='Environment=staging'",
    "deploy:prod": "NODE_ENV=production ts-node ./app/deploy.ts sam deploy -t ./app/template.yaml --stack-name chatx-production --s3-prefix chatx-production --parameter-overrides='Environment=production'"
  },
  "dependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.9.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@types/crypto-js": "^4.2.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "esbuild": "^0.19.10",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  }
}
