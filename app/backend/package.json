{
  "name": "@chatx/backend",
  "version": "1.0.0",
  "sideEffects": false,
  "scripts": {
    "dev": "nodemon src/server.ts",
    "serve": "node dist/server.js",
    "build": "sh ./scripts/build.sh",
    "deploy:staging": "pnpm build && sam deploy --parameter-overrides='Environment=staging'",
    "deploy:prod": "pnpm build && sam deploy --parameter-overrides='Environment=prod'"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.484.0",
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@chatx/shared": "workspace:*",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.19.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
