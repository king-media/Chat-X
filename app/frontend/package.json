{
  "name": "@chatx/frontend",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:staging": "vite -m staging",
    "dev:prod": "vite -m production",
    "prebuild": "tsc && pnpm build:lambda",
    "build:lambda": "esbuild ./s3-lambda/app-upload.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outdir=./s3-lambda/dist && cd ./s3-lambda/dist && zip -r app-upload.zip . -i 'app-upload.*'",
    "build": "NODE_ENV=production pnpm prebuild && vite build",
    "build:staging": "NODE_ENV=staging pnpm prebuild && vite build -m staging",
    "build:dev": "NODE_ENV=development pnpm prebuild && vite build -m development",
    "preview": "vite preview",
    "lint": "tsc && eslint ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.514.0",
    "@chatx/shared": "workspace:*",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "autoprefixer": "^10.4.16",
    "dompurify": "^3.0.6",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-plugin": "^1.0.0",
    "tailwindcss": "^3.4.1",
    "vitest": "^1.1.3"
  }
}